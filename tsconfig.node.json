{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
      "@icons/*": ["./src/assets/icons/*"],
      "@assets/*": ["./src/assets/*"]
    }
  },
  "include": ["vite.config.ts"]
}
